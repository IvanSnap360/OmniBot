<launch>

  <!-- This file makes it easy to include the settings for sensor managers -->

  <!-- Params for 3D sensors config -->
  <rosparam command="load" file="$(find omnibot_manipulator_moveit)/config/sensors_3d.yaml" />
  <!-- Params for the octomap monitor -->
  <param name="octomap_frame" type="string" value="d400_arm" />
  <param name="octomap_resolution" type="double" value="0.1" /> <!-- in meters -->
  <param name="max_range" type="double" value="2.5" />


  <!-- Load the robot specific sensor manager; this sets the moveit_sensor_manager ROS parameter -->
  <arg name="moveit_sensor_manager" default="omnibot_robot" />
  <include file="$(dirname)/$(arg moveit_sensor_manager)_moveit_sensor_manager.launch.xml" />

</launch>